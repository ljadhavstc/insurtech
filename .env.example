# Environment Configuration
# Copy this file to .env and update the values as needed

# Mock Server Configuration
# Set to true to enable mock server (for development/testing)
# Set to false to use live APIs only
ENABLE_MOCK_SERVER=false

# Mock Server Fallback Mode
# When true: Use mock server immediately, skipping real API attempts
# When false: Try real API first, then fallback to mock if unreachable
# Only applies when ENABLE_MOCK_SERVER=true
FORCE_MOCK_MODE=false
